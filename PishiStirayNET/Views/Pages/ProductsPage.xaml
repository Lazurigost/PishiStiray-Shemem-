<Page x:Class="PishiStirayNET.Views.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=System"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:PishiStirayNET.Views.Pages"
      mc:Ignorable="d" 
      xmlns:converters="clr-namespace:PishiStirayNET.Infrastructure.Converters"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage"
      Name="ProductPage"
      DataContext="{Binding ProductsPageViewModel, Source={StaticResource DI}}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" MinHeight="400"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        

        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 BorderBrush="{StaticResource additionalColor}"
                 Grid.Column="1"
                 Margin="0,5,0,5"/>

        <ListView Grid.Row="1"
                  Grid.Column="1"
                  VerticalAlignment="Top"
                x:Name="mainListView"
                 
                  ItemsSource="{Binding ProductsList}"
                  Height="{Binding ActualHeight, ElementName=ProductPage, Mode=OneWay}">



            
            <ListView.ItemTemplate >
                <DataTemplate >
                    <Border Margin="10,10"
                            BorderThickness="3"
                            Padding="10,0"
                            Width="{Binding ActualWidth, ElementName=mainListView,Converter={converters:SubtractConverter Value=40}}"
                            BorderBrush="{StaticResource additionalColor}">
                        <Grid Height="auto"
                                VerticalAlignment="Center"
                          HorizontalAlignment="Stretch" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Image 
                               Width="130" 
                            Height="130"
                            Source= "{Binding ImageUrl}"
                            Grid.Column="0"
                            Margin="0,4"
                            HorizontalAlignment="Left"/>

                            <StackPanel
                                    Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="20,0">
                                <TextBlock FontWeight="Bold"
                                       Margin="2,3"
                                       Text="{Binding Title}"/>

                                <TextBlock Text="{Binding Description}"
                                       TextWrapping="Wrap"
                                         Margin="2,3"
                                       Width="300"/>

                                <TextBlock Text="{Binding Manufacturer, 
                                StringFormat='Производитель - {0}'}"/>

                                <TextBlock Text="{Binding Price, 
                                StringFormat='Цена - {0}'}"/>

                            </StackPanel>

                            <TextBlock Text="{Binding CurrentDiscount,
                            StringFormat= 'Текущая скидка - {0}'}"
                                   Grid.Column="2"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
